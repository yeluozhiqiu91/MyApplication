<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    tools:context="com.example.wang.myapplication.MainActivity"
    >
    <!--定义一个表格布局，第二列可以收缩，第三列可以拉伸-->
    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="2">
        <Button android:id="@+id/ok1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="独占一行的button"/>
        <TableRow>
            <Button android:id="@+id/ok2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="普通的button2"/>
            <Button android:id="@+id/ok3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="收缩的button3"/>
            <Button android:id="@+id/ok4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="伸长的button4"/>
        </TableRow>
    </TableLayout>
    <!--指定第二列隐藏-->
    <TableLayout
        android:id="@+id/TableLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="1">
        <Button android:id="@+id/ok11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="独占一行的button11"/>
        <TableRow>
            <Button android:id="@+id/ok12"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="普通的button12"/>
            <Button android:id="@+id/ok13"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="隐藏的button13"/>
            <Button android:id="@+id/ok14"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="普通的button14"/>
        </TableRow>
    </TableLayout>
    <!--指定第二列，第三列可以拉伸-->
    <TableLayout
        android:id="@+id/TableLayout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">
        <Button android:id="@+id/ok21"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="独占一行的button21"/>
        <TableRow>
            <Button android:id="@+id/ok22"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="button22"/>
            <Button android:id="@+id/ok23"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="拉伸的button23"/>
            <Button android:id="@+id/ok24"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="拉伸的button24"/>
        </TableRow>
    </TableLayout>

</LinearLayout>